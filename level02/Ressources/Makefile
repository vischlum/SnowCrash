.PHONY: all clean fclean re

CC = gcc
CFLAGS = -Wall -Wextra -Werror

NAME = pcap_reader
#******************************************************************************#
#                                  LIBFT                                       #
#******************************************************************************#


#******************************************************************************#
#                                    RULES                                     #
#******************************************************************************#

all: $(NAME)

clean:
	@printf "\n\033[1m SUPPRESSION DES OBJETS\033[0m\n"
	@rm -rf *.o


fclean: clean
	@printf "\n\033[1mSUPPRESSION DE $(NAME)\033[0m\n"
	@rm -rf $(NAME)

re: fclean all

#******************************************************************************#
#                                  Compilation                                 #
#******************************************************************************#

$(NAME):
	$(CC) $(CFLAGS) pcap_reader.c -o $(NAME) -lpcap
